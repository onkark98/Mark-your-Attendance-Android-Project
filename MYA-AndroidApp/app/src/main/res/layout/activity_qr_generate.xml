<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Qr_generate">

    <EditText
        android:id="@+id/text"
        android:layout_width="245dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:autofillHints=""
        android:background="@drawable/box"
        android:hint="dd/mm/yyyy-subject"
        android:inputType="none|textPersonName" />

    <Button
        android:id="@+id/gen_btn"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="-121dp"
        android:background="@drawable/box"
        android:text="GENERATE"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/image"
            android:layout_width="219dp"
            android:layout_height="219dp"
            android:layout_gravity="bottom|center_vertical|fill_vertical|center_horizontal|center|clip_horizontal"
            android:background="@drawable/box"
            android:soundEffectsEnabled="true" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="325dp"
        android:layout_height="0dp"
        android:layout_below="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-16dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:src="@drawable/generator" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="127dp"
        android:layout_height="27dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="132dp"
        android:background="@drawable/txtbg"
        android:textAlignment="center"
        android:text="QR Generator"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />



</RelativeLayout>